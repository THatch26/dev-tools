---
import Layout from '../layouts/Layout.astro';
import ChmodCalculator from '../components/ChmodCalculator';

const siteUrl = 'https://dev-tools.devtoolsite.workers.dev';
const toolLd = {
  "@context": "https://schema.org",
  "@type": "WebApplication",
  "name": "chmod Calculator",
  "url": `${siteUrl}/chmod-calculator`,
  "description": "Interactive chmod calculator with visual permission toggles, octal and symbolic notation, common presets like 755 and 644, security warnings, and umask calculation.",
  "applicationCategory": "DeveloperApplication",
  "operatingSystem": "Any",
  "offers": { "@type": "Offer", "price": "0", "priceCurrency": "USD" },
  "browserRequirements": "Requires JavaScript"
};
---

<Layout
  title="chmod Calculator - Unix File Permission Calculator"
  description="Interactive chmod calculator with visual permission toggles, octal and symbolic notation, common presets like 755 and 644, security warnings, and umask calculation. Free online tool."
  jsonLd={toolLd}
>
  <div class="space-y-4">
    <div>
      <a href="/" class="text-sm text-[--color-text-muted] hover:text-[--color-text-secondary] transition-colors no-underline">&larr; All tools</a>
    </div>
    <div>
      <h1 class="text-2xl sm:text-3xl font-bold mb-2">chmod Calculator</h1>
      <p class="text-[--color-text-secondary]">
        Calculate Unix/Linux file permissions interactively. Toggle permissions for owner, group, and other to get the octal notation, symbolic representation, and ready-to-use chmod command.
      </p>
    </div>
    <ChmodCalculator client:load />

    <div class="mt-12 pt-8 border-t border-[--color-border]">
      <h2 class="text-lg font-semibold mb-4 text-[--color-text-secondary]">Related Tools</h2>
      <div class="grid sm:grid-cols-3 gap-3">
        <a href="/env-file-editor" class="rounded-lg bg-[--color-bg-secondary] border border-[--color-border] p-4 hover:border-[--color-accent] transition-all no-underline block">
          <div class="font-medium text-[--color-text-primary]">.env File Editor</div>
          <div class="text-sm text-[--color-text-muted] mt-1">Parse, edit, and convert environment files</div>
        </a>
        <a href="/docker-compose-validator" class="rounded-lg bg-[--color-bg-secondary] border border-[--color-border] p-4 hover:border-[--color-accent] transition-all no-underline block">
          <div class="font-medium text-[--color-text-primary]">Docker Compose Validator</div>
          <div class="text-sm text-[--color-text-muted] mt-1">Validate docker-compose.yml files</div>
        </a>
        <a href="/cron-expression-generator" class="rounded-lg bg-[--color-bg-secondary] border border-[--color-border] p-4 hover:border-[--color-accent] transition-all no-underline block">
          <div class="font-medium text-[--color-text-primary]">Cron Expression Generator</div>
          <div class="text-sm text-[--color-text-muted] mt-1">Build and decode cron expressions visually</div>
        </a>
      </div>
    </div>
  </div>
</Layout>
