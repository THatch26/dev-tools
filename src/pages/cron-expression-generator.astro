---
import Layout from '../layouts/Layout.astro';
import CronGenerator from '../components/CronGenerator';

const siteUrl = 'https://dev-tools.devtoolsite.workers.dev';
const toolLd = {
  "@context": "https://schema.org",
  "@type": "WebApplication",
  "name": "Cron Expression Generator",
  "url": `${siteUrl}/cron-expression-generator`,
  "description": "Build and decode cron expressions with a visual editor. Human-readable descriptions, next 10 execution times, common presets.",
  "applicationCategory": "DeveloperApplication",
  "operatingSystem": "Any",
  "offers": { "@type": "Offer", "price": "0", "priceCurrency": "USD" },
  "browserRequirements": "Requires JavaScript"
};
---

<Layout
  title="Cron Expression Generator - Visual Crontab Builder"
  description="Build and decode cron expressions with a visual editor. Human-readable descriptions, next 10 execution times, common presets. Free online crontab generator tool."
  jsonLd={toolLd}
>
  <div class="space-y-4">
    <div>
      <a href="/" class="text-sm text-[--color-text-muted] hover:text-[--color-text-secondary] transition-colors no-underline">&larr; All tools</a>
    </div>
    <div>
      <h1 class="text-2xl sm:text-3xl font-bold mb-2">Cron Expression Generator</h1>
      <p class="text-[--color-text-secondary]">
        Build cron expressions visually or type them directly. Get human-readable descriptions and preview the next scheduled execution times. Supports standard 5-field cron syntax.
      </p>
    </div>
    <CronGenerator client:load />

    <div class="mt-12 pt-8 border-t border-[--color-border]">
      <h2 class="text-lg font-semibold mb-4 text-[--color-text-secondary]">Related Tools</h2>
      <div class="grid sm:grid-cols-3 gap-3">
        <a href="/chmod-calculator" class="rounded-lg bg-[--color-bg-secondary] border border-[--color-border] p-4 hover:border-[--color-accent] transition-all no-underline block">
          <div class="font-medium text-[--color-text-primary]">chmod Calculator</div>
          <div class="text-sm text-[--color-text-muted] mt-1">Interactive Unix file permission calculator</div>
        </a>
        <a href="/env-file-editor" class="rounded-lg bg-[--color-bg-secondary] border border-[--color-border] p-4 hover:border-[--color-accent] transition-all no-underline block">
          <div class="font-medium text-[--color-text-primary]">.env File Editor</div>
          <div class="text-sm text-[--color-text-muted] mt-1">Parse, edit, and convert environment files</div>
        </a>
        <a href="/docker-compose-validator" class="rounded-lg bg-[--color-bg-secondary] border border-[--color-border] p-4 hover:border-[--color-accent] transition-all no-underline block">
          <div class="font-medium text-[--color-text-primary]">Docker Compose Validator</div>
          <div class="text-sm text-[--color-text-muted] mt-1">Validate docker-compose.yml files</div>
        </a>
      </div>
    </div>
  </div>
</Layout>
